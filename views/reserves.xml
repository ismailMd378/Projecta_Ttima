<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!--  views  -->

        <!-- Vista de listado -->
           <record  model="ir.ui.view" id="projecta_ttima_reserves_list"> 
            <field name="name">projecta_ttima reserves list</field>
            <field name="model">projecta_ttima.reserves</field>
            <field name="arch" type="xml">
                    <tree>
                            <field name="CodiReserva"/>
                            <field name="DataArrivada"/>
                            <field name="NitExtra"/>
                            <field name="Num_Bicis"/>
                            <field name="DataReserva"/>
                            <field name="CodiIntermediari"/>
                            <field name="CodiGrup"/>
                            <field name="GrupRuta"/>
                    </tree>
            </field>
        </record>

        <!--  actions opening views on models  -->

        <record model="ir.actions.act_window" id="projecta_ttima.action_reserves">
            <field name="name">projecta_ttima Reserves</field>    
            <field name="res_model">projecta_ttima.reserves</field>
            <field name="view_mode">tree,form</field>
        </record> 



        <menuitem id="projecta_ttima.menu_root" name="Projecta Ttima Menu" />

        <!--  Top menu item  -->
        <menuitem  name="Menu Reserves" id="projecta_ttima.menu_reserves" parent="projecta_ttima.menu_root"/> 


    <!--  actions -->
        <menuitem  name="List" id="projecta_ttima.menu_reserves_list" parent="projecta_ttima.menu_reserves" action="projecta_ttima.action_reserves"/> 

</data>
</odoo>
