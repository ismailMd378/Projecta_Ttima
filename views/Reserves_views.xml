<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Formulario -->
        <record id="view_reserves_form" model="ir.ui.view">
            <field name="name">reserves.form</field>
            <field name="model">projecta_ttima.reserves</field>
            <field name="arch" type="xml">
                <form string="Reserves">
                    <sheet>
                        <group>
                            <field name="CodiReserva"/>
                            <field name="DataArrivada"/>
                            <field name="NitExtra"/>
                            <field name="Num_Bicis"/>
                            <field name="DataReserva"/>
                            <field name="CodiIntermidiari"/>
                            <field name="CodiGrup"/>
                            <field name="GrupRuta"/>
                            <field name="CodiTarifa"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Árbol -->
        <record id="view_reserves_tree" model="ir.ui.view">
            <field name="name">reserves.tree</field>
            <field name="model">projecta_ttima.reserves</field>
            <field name="arch" type="xml">
                <tree string="Reserves">
                    <field name="CodiReserva"/>
                    <field name="DataArrivada"/>
                    <field name="NitExtra"/>
                    <field name="Num_Bicis"/>
                    <field name="DataReserva"/>
                    <field name="CodiIntermidiari"/>
                    <field name="CodiGrup"/>
                    <field name="GrupRuta"/>
                    <field name="CodiTarifa"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
