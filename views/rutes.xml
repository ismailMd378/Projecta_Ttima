<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Formulario -->
        <record id="view_rutes_form" model="ir.ui.view">
            <field name="name">rutes.form</field>
            <field name="model">projecta_ttima.rutes</field>
            <field name="arch" type="xml">
                <form string="Rutes">
                    <sheet>
                        <group>
                            <field name="CodiRutes"/>
                            <field name="Nom"/>
                            <field name="Preu"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Árbol -->
        <record id="view_rutes_tree" model="ir.ui.view">
            <field name="name">rutes.tree</field>
            <field name="model">projecta_ttima.rutes</field>
            <field name="arch" type="xml">
                <tree string="Rutes">
                    <field name="CodiRutes"/>
                    <field name="Nom"/>
                    <field name="Preu"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
